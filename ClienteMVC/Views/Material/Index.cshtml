@model IEnumerable<ServicioWCF.DTO.DTOMaterial>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodISAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEstreno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodISAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstreno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @if (item.Tipo)
                {
                    <p>Pelicula</p>
                }
                else
                {
                    <p>Serie</p>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CodISAN }) |
                @Html.ActionLink("Details", "Details", new { id = item.CodISAN }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CodISAN })
            </td>
        </tr>
    }

</table>


@Html.ActionLink("Inicio", "Index", "Home")
